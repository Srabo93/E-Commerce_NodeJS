<body>
<%- include('../includes/navigation.ejs') %>
<main class="row text-center list-group w-auto my-2">
    <% if (cartItems.length > 0 ) { %>
        <% for (let item of cartItems) { %>
            <div class=" col-md-6 offset-md-3 my-2">
                <a href="/products/<%= item.id %>" class="list-group-item list-group-item-action  py-3">
                    <div class="row w-100 text-center ">
                        <div class="col-4">
                            <img src="<%= item.imgUrl %>" width="32" height="32"
                                 class="rounded-circle flex-shrink-0">
                            <h6 class="mb-0"><%= item.title %></h6>
                        </div>
                        <div class="col-4">
                            <p class="mb-0 opacity-75"><%= item.description %></p>
                        </div>
                        <div class="col-4">
                            <small class="opacity-50 text-nowrap">Quantity:
                                <strong> <%= item.qty %></strong>
                            </small>
                            <small class="opacity-50 text-nowrap">Price:
                                <strong>$<%= item.price %></strong>
                            </small>
                            <form action="/cart-delete-item" method="post">
                                <button class="btn btn-sm btn-danger m-1">Remove item</button>
                                <input type="hidden" name="productId" value="<%= item.id %>">
                            </form>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
        <div class=" col-md-6 offset-md-3 my-2">
            <div class="d-flex gap-2 w-100 justify-content-end">
                <div>
                    <h6 class="mb-0">Total:</h6>
                    <p class="mb-0 opacity-75">$<%= cartTotal %></p>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class=" col-md-6 offset-md-3">
            <h3>No Items</h3>
        </div>
    <% } %>
</main>

<%- include('../includes/end.ejs') %>