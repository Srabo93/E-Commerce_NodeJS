<body>
<%- include('../includes/navigation.ejs') %>

<main class="container my-3">

    <% if (hasProducts) { %>
        <% for (let product of products) { %>
            <div class="row g-0 my-4 pb-2 border-bottom">
                <div class="col-md-4">
                    <img src="<%= product.imgUrl %>" class="d-block mx-lg-auto img-fluid" style="max-width: 140px;">
                </div>
                <div class="col-md-4 ">
                    <h3 class="display-6 fw-bold lh-1 mb-3"><%= product.title %></h3>
                    <p class="lead">$<%= product.price %></p>
                    <p class="lead"><%= product.description %></p>
                    <div class="d-flex justify-content-start align-content-center">
                        <a href="/products/<%= product.id %>" class="btn btn-warning">Details</a>
                        <%- include('../includes/add-to-cart.ejs',{product:product}) %>
                    </div>
                </div>
                <div class="col-md-4 ">Potentielle Werbung</div>
            </div>
        <% } %>
    <% } else { %>
        <h1>No Products Found!</h1>
    <% } %>
</main>
<%- include('../includes/end.ejs') %>