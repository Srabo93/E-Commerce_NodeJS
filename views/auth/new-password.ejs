<%- include('../includes/head.ejs') %>

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main class="container text-center mt-3  w-50">
        <form class="w-50 m-auto" action="/new-password" method="post">
            <h1 class="h3 mb-3 fw-normal">Set New Password</h1>
            <div class="mb-3 d-flex flex-column">
                <label class="my-1" for="newPassword">Enter new Password</label>
                <input class="my-1 form-control" type="password" name="newPassword" id="newPassword"
                    class="form-control">
                <label class="my-1" for="newPasswordRepeat">Repeat New Password</label>
                <input class="my-1 form-control" type="password" name="newPasswordRepeat" id="newPasswordRepeat"
                    class="form-control">
            </div>
            <%- include('../includes/csrfToken.ejs') %>
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="newPasswordToken" value="<%= newPasswordToken %>">
            <button class="mt-3 w-100 btn btn-primary" type="submit">Set Password</button>
        </form>
    </main>

    <%- include('../includes/end.ejs') %>